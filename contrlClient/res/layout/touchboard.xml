<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout android:id="@+id/linearLayout_buttons" 
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent" 
        android:orientation="horizontal"
        android:layout_height="wrap_content">
         <Button android:id="@+id/leftButton" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="左"
        />
          <Button android:id="@+id/rightButton" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="右"
        />
    </LinearLayout>
    <TextView android:id="@+id/touch_area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/linearLayout_buttons"
        android:text="This is touchboard!"
        android:gravity="center"
        />
   
</RelativeLayout>
